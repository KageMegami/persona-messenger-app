<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignEnd="@+id/cadre"
        android:layout_alignBottom="@+id/cadre"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@mipmap/ic_launcher" />


    <ImageView
        android:id="@+id/cadre"
        android:layout_width="85dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/cadre" />

    <ImageView
        android:id="@+id/bubble"
        android:layout_width="340dp"
        android:layout_height="57dp"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/cadre"
        android:layout_alignTop="@+id/cadre"
        app:srcCompat="@drawable/long_left" />

    <TextView
        android:id="@+id/text"
        android:layout_width="248dp"
        android:layout_height="26dp"
        android:layout_alignStart="@id/bubble"
        android:layout_alignTop="@+id/bubble"
        android:layout_marginStart="39dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/persona"
        android:gravity="center_vertical|start"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="12sp" />


</RelativeLayout>